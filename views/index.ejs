  <main class="container">

    <header class="siteheader">
      <h2 class="headingtext">Add what interests you!</h2>

        <form id = "searchvalue" action="/api/search" method="GET">
          <textarea class="input" rows="1" name="queryparams" placeholder="What are you interested in?"></textarea><input id="navbutton" type="submit" width = 20px value="Find It!">
      </form>

    </header>


    <div class="columnheader">
        <h2 id="mylist">My List</h2>

      </div>

    <div class="columns">

      <div class="column">

        <div class="category">
            <!-- <a href="/search"><p>Link to Results Page</p></a>
            <a href="/login"><p>Link to login page</p></a> -->
          <h3>Things to Watch</h3>

          <article class="itembody">

              <table class="table">
                  <tbody>
                    <% for(let film in films) { %>
                      <tr>
                        <td><%= films[film].poster %></td>

                        <td>
                        <input type="checkbox" name="checkboxG1" id="checkboxG1" class="css-checkbox" onchange="confirm(this)"/>   <label for="checkboxG1" class="css-label">  <%= films[film].title %></td></label>
                        <td><%= films[film].genre %></td>
                        <td><%= films[film].rating %></td>
                        <td><%= films[film].poster %></td>
                        <td><a href="/index"><form method="POST" action="/films/<%= film %>/delete"><button type="submit" class="remove">Remove from My List</button></form></a></td>

                      </tr>
                    <% } %>
                  </tbody>

                </table>
          </article>


        </div>

        <div class="category">
          <h3>Your To-Read Pile</h3>
          <article class="itembody">

              <table class="table">
                  <tbody>
                    <% for(let book in books) { %>
                      <tr>
                        <td> <input type="checkbox" name="checkboxG1" id="checkboxG1" class="css-checkbox" onchange="confirm(this)"/>   <label for="checkboxG1" class="css-label">  <%= books[book].book_title %></td></label>
                        <td><%= books[book].author %></td>
                        <td><%= books[book].genre %></td>
                        <td><%= books[book].book_rating %></td>
                        <td><%= books[book].page_count %></td>
                        <td><a href="/index"><form method="POST" action="/books/<%= book %>/delete"><button type="submit" class="remove">Remove from My List</button></form></a></td>

                      </tr>
                    <% } %>
                  </tbody>

                </table>
          </article>
        </div>

      </div>
      <div class="column">

        <div class="category">
          <h3>Places to Eat</h3>
          <article class="itembody">

              <table class="table">
                  <tbody>
                    <% for(let restaurant in restaurants) { %>
                      <tr>
                        <td><%= restaurants[restaurant].restaurant_name %></td>
                        <td><%= restaurants[restaurant].address %></td>
                        <td><%= restaurants[restaurant].type_of_food %></td>
                        <td><%= restaurants[restaurant].restaurant_rating %></td>
                        <td><a href="/index"><form method="POST" action="/restaurants/<%= restaurant %>/delete"><button type="submit" class="remove">Remove from My List</button></form></a></td>

                      </tr>
                    <% } %>
                  </tbody>

                </table>
          </article>
        </div>

        <div class="category">
          <h3>Your Product Wishlist</h3>
          <article class="itembody">

              <table class="table">
                  <tbody>
                    <% for(let product in products) { %>
                      <tr>
                        <td><%= products[product].product_image %></td>
                        <td><%= products[product].product_name %></td>
                        <td>$<%= products[product].price %></td>
                        <td><%= products[product].type %></td>
                        <td><a href="/index"><form method="POST" action="/products/<%= product %>/delete"><button type="submit" class="remove">Remove from My List</button></form></a></td>

                      </tr>
                    <% } %>
                  </tbody>

                </table>
          </article>
        </div>
      </div>
    </div>
  </main>
