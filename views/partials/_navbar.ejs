<nav>
    <span id="leftnav">List It!</span>
    <span id="rightnav">


    <% if (locals.user === undefined) { %>

      <form action="/login" method="POST">
      <label class="loginlabel" for="username" >Username: </label>
      <input type="text" name="username" style="width: 200px; margin: 1em" placeholder="Username">
      <label class="loginlabel" for="password" > Password: </label>
      <input type="password" name="password" style="width: 200px; margin: 1em" placeholder="Password">
          <button type="submit" class="btn btn-primary">Login</button>
          </div>
        </form>

      <% } else { %>

          <form class="form-inline" action="/logout" method="POST">
           <div class="form-group mb-2 mx-auto">
              <label for="loggedin">Logged in as &nbsp;<strong> <%= user.name %> </strong>  </label>
               <button type="submit" class="btn btn-secondary" style="margin: 1em">Logout</button>
            </div>
          </form>

        <% } %>
